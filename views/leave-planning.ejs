<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Leave planning</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/assets/vendors/css/vendors.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/calendar.css">
</head>

<body>

    <div class="container-fluid mt-4">

        <h4 class="mb-3">Leave planning</h4>
        <div class="row mb-3">
            <div class="col-md-3 mt-2">
                <label for="lineFilter" class="ms-2">Line</label>
                <select class="form-select" id="lineFilter">
                    <% lineList.forEach(line=> { %>
                        <option value="<%= line %>" <% if(line==='NULL' ) { %>selected<% } %>>
                                <%= line %>
                        </option>
                        <% }) %>
                </select>
            </div>
            <div class="col-md-3 mt-2">
                <label for="lineFilter" class="ms-2">Departement</label>
                <select class="form-select" id="departementFilter">
                    <% departementList.forEach(function(departement) { %>
                        <option value="<%= departement %>" <% if(departement==='HR' ) { %>selected<% } %>>
                                <%= departement %>
                        </option>
                        <% }); %>
                </select>
            </div>
            <!-- <div class="col-md-3 mt-2">
            </div> -->
            <div class="col-md-6 mt-2 justify-content-end text-end">
                <button type="button" class="btn btn-outline-primary mx-3" data-bs-toggle="modal"
                    data-bs-target="#importModal">
                    Import Employees
                </button>
                <button type="button" class="btn btn-primary mx-3" data-bs-toggle="modal"
                    data-bs-target="#simulationModal">
                    Local leave simulation
                </button>
                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#leaveModal">
                    New Leave
                </button>
            </div>
        </div>

        <!-- Modal Planifier CongÃ© -->
        <%- include('partials/new-leave-modal') %>

            <%- include('partials/simulate-leave-modal') %>

                <%- include('partials/planning-calendar') %>

                    <%- include('partials/import-modal') %>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"></script>
    <script>
        const myModal = document.getElementById('leaveModal')
        const myModal1 = document.getElementById('simulationModal')
    </script>
    <script src="/assets/vendors/js/vendors.min.js"></script>

</body>

</html>